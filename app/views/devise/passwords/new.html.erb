<% content_for :head do %>
  <style>
    body {
      background-color: white;
    }
  </style>
<%end%>
<div class="container row flex-container">
  <div class="item col-md-4 col-md-offset-4">
    <div style="text-align: center">
      <%=image_tag "s2r", :style=>"max-height: 150px;"%>
    </div>
    <h2>Need a password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <%select_hash = {}%>
      <%Camp.all.order(:name).each do |camp|%>
        <%select_hash[camp.name] = camp.try(:contact).try(:email)%>
      <%end%>

      <div class="form-group">
        <%= label_tag "Camps"%><br />
        <%= select_tag "camp", options_from_collection_for_select(select_hash, :last, :first), :prompt => "Select your center", :class => "form-control"%>
      </div>

      <div id="email_text" class="form-group" style="display: none;">The email address for your center is: <br/><br/><b><span id="email_field"></span></b><br/><br/> If you need to change this, please contact Joel Winchip</div>

      <%= f.hidden_field :email%>

      <div class="form-group">
        <%= f.submit "Send me password instructions", class:"btn btn-success", style:"margin-left: 0; display: block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
  $("#camp").change(function() {
    $("#email_text").show();
    $("#email_field").html($(this).val());
    $("#user_email").val($(this).val());
  })
</script>
