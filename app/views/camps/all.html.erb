<% content_for :head do %>
  <style>
    body {
      background-color: #eee;
    }
  </style>
<%end%>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Listing Camps</h1>

      <div class="row">
        <div class="col-sm-12">
          Camp
        </div>
      </div>

      <% @camps.each do |camp| %>
        <div class="row camp-row">
          <div class="col-sm-5">
            <%= camp.name %><br />
          </div>
          <div class="col-sm-3">
            <%= link_to 'Show', camp, :style=>"margin-right: 15px" %>
            <%= link_to 'Edit', edit_camp_path(camp), :style=>"margin-right: 15px" %>
            <%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
